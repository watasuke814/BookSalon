<div class="main users-new">
  <div class="container">
    <div class="form-heading">Login</div>
    <div class="form users-form">
      <div class="form-body">
      	<% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
      	<%= form_tag("/login") do%>
        <input name="email" value="<%=@email%>" class="emailL" placeholder="Email">
        <input type="password" name="password" value="<%=@password%>" class="password" placeholder="Password">
        <input type="submit" value="Login">
        <%end%>
      </div>
    </div>
  </div>
</div>